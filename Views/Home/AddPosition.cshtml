@model AddPositionViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h2>Добавление новой должности</h2>

@using (Html.BeginForm("AddPosition", "Home", FormMethod.Post))
{
    <div class="form-group">
        <label for="PositionId" class="control-label">Код Должности:</label>
        @Html.TextBoxFor(model => model.PositionId, new { @class = "form-control",placeholder = "Введите код должности" })
        @Html.ValidationMessageFor(model => model.PositionId, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label for="PositionName" class="control-label">Наименование Должности:</label>
        @Html.TextBoxFor(model => model.PositionName, new { @class = "form-control",placeholder = "Введите наименование должности" })
        @Html.ValidationMessageFor(model => model.PositionName, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label for="TariffRate" class="control-label">Тарифная ставка (оклад):</label>
        @Html.TextBoxFor(model => model.TariffRate, new { @class = "form-control" ,placeholder = "Введите сумму оклада"})
        @Html.ValidationMessageFor(model => model.TariffRate, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label for="Coefficient" class="control-label">Коэффициент-Надбавка:</label>
        @Html.TextBoxFor(model => model.Coefficient, new { @class = "form-control",placeholder = "Если коэффициент отсутствует в ведите 0" })
        @Html.ValidationMessageFor(model => model.Coefficient, "", new { @class = "text-danger"})
    </div>
    <br>
    <button type="submit" class="btn btn-primary">Добавить должность</button>
}

@section Scripts {
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/additional-methods.min.js"></script>
    <script>
        $(document).ready(function () {
            $("form").validate();
        });
    </script>
}